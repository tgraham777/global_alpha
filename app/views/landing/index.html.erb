<body cz-shortcut-listen="true">

    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" id="cidot1" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" id="cidot2" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" id="cidot3" data-slide-to="2" class=""></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img id="slide-image" class="first-slide" src="/images/em-debt-cover-pic.png" alt="First slide">
          <div class="container">
            <div class="carousel-caption">
              <h1 class="slide-title"><%= @first_preview.title %></h1>
              <% if current_admin? %>
                <p><%= link_to "View report", admin_preview_path(@first_preview), class: "btn btn-lg btn-primary landing", role: "button" %></p>
              <% else %>
                <p><%= link_to "View report", preview_path(@first_preview), class: "btn btn-lg btn-primary landing", role: "button" %></p>
              <% end %>
            </div>
          </div>
        </div>
        <div class="item">
          <img id="slide-image" class="second-slide" src="/images/oil3.png" alt="Second slide">
          <div class="container">
            <div class="carousel-caption">
              <h1 class="slide-title"><%= @second_preview.title %></h1>
              <% if current_admin? %>
                <p><%= link_to "View report", admin_preview_path(@second_preview), class: "btn btn-lg btn-primary landing", role: "button" %></p>
              <% else %>
                <p><%= link_to "View report", preview_path(@second_preview), class: "btn btn-lg btn-primary landing", role: "button" %></p>
              <% end %>
            </div>
          </div>
        </div>
        <div class="item">
          <img id="slide-image" class="third-slide" src="/images/em-debt-cover-pic.png" alt="Third slide">
          <div class="container">
            <div class="carousel-caption">
              <h1 class="slide-title"><%= @third_preview.title %></h1>
              <% if current_admin? %>
                <p><%= link_to "View report", admin_preview_path(@third_preview), class: "btn btn-lg btn-primary landing", role: "button" %></p>
              <% else %>
                <p><%= link_to "View report", preview_path(@third_preview), class: "btn btn-lg btn-primary landing", role: "button" %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
</body>
