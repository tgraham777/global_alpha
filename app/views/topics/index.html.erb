<div class="container" id="topics-container">
  <h1 class="index-title"><span style="font-size: 25px;" class="glyphicon glyphicon-th-list"></span> Topics</h1>

  <% @topics.each do |topic| %>
    <h2 class="index-item-title"><%= link_to topic.title, topic_path(topic) %></h2>
    <h4><em><%= topic.report_date %></em></h4>
    <div class="tagline-index"><%= topic.tagline.html_safe %></div><hr>
  <% end %>
</div>
