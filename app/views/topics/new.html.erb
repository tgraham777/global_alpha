<div class="navbar-wrapper">
  <div class="container">
    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Global Alpha</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <li class="active"><a href="/logout" data-method="delete">Log Out</a></li>
              <li><%= link_to "My Profile", user_path(current_user) %></li>
              <li><%= link_to "Back to Topics", topics_path %></li>
            <% else %>
              <li class="active"><a href="/login">Log In</a></li>
              <li><a href="/users/new">Sign Up</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>

<div class="container" id="new-topic-container">
  <h1>Create Topic</h1>

  <%= form_tag topics_path do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, params[:title] %><br><br>

    <%= label_tag :body %>
    <%= text_area_tag :body, params[:body] %><br><br>

    <%= label_tag :tags %><span><em> (separate with commas)</em></span>
    <%= text_field_tag :tags, params[:tags] %><br><br>

    <%= submit_tag "Create Topic" %>
  <% end %>
</div>
