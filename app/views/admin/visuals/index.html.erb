<div class="container" id="visuals-container">
  <h1>Visuals</h1>

  <% @visuals.each do |visual| %>
    <hr><h3><%= link_to visual.title, admin_visual_path(visual) %></h3>
    <h4><em>Last updated: <%= visual.updated_at.strftime("%B %d, %Y") %></em></h4>
    <%= truncate(visual.description, length: 250) %>
  <% end %>
</div>
