<div class="container" id="country-index-container">
  <h1><span style="font-size: 25px;" class="glyphicon glyphicon-globe"></span> Countries</h1>

  <form method="GET" action="/admin/countries/new">
    <input type="submit" value="Create new country", class="btn btn-control btn-success">
  </form><br>

  <ul>
    <% @countries.each do |country| %>
      <li><%= link_to country.name, admin_country_path(country) %></li>
    <% end %>
  </ul>
</div>
