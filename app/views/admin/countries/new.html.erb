<div class="container" id="new-country-container">
  <%= link_to "Back to Countries", admin_countries_path, class: "back-to-link" %>

  <h1>Add Country</h1>

  <div class="add-visual-button-container">
    <%= button_to "Add Visual", "javascript:void(0)", class: "btn btn-control btn-primary", id: "country-add-visual-button" %><br>
  </div>

  <%= form_for [:admin, @country], html: { class: "form-group" } do |f| %>
    <div class="default-country-items">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %><br>

      <%= f.label :last_updated %>
      <%= f.text_field :last_updated, class: "form-control", placeholder: "Enter date" %><br>

      <%= f.label :intro %>
      <%= f.text_area :intro, class: "form-control", placeholder: "Enter introduction (if applicable)" %><br><hr>

      <h4>Visual #1</h4>

      <%= f.fields_for :visuals do |ff| %>
        <%= ff.label :title %>
        <%= ff.text_field :title, class: "form-control", placeholder: "Enter title (optional)" %><br>

        <%= ff.label :link %>
        <%= ff.text_field :link, class: "form-control", placeholder: "Enter Tableau script or URL" %><br>

        <%= ff.label :caption %>
        <%= ff.text_field :caption, class: "form-control", placeholder: "Enter caption for visual" %><br>

        <%= ff.label :description %>
        <%= ff.text_area :description, class: "form-control", placeholder: "Enter description for visual and/or additional text" %><br><hr>
      <% end %>
    </div>

    <%= f.label :conclusion %>
    <%= f.text_area :conclusion, class: "form-control", placeholder: "Enter conclusion (if applicable)" %><hr>

    <h4><span class="glyphicon glyphicon-stats"></span>&nbsp Related Indicators</h4>
    <%= f.fields_for :indicators do |indicator| %>
      <%= collection_check_boxes :country, :indicators, Indicator.all, :id, :name do |b| %>
      <p>
        <%= b.check_box(class: "check_box") %>
        <%= b.object.name %>
      </p>
      <% end %>
    <% end %><hr>

    <h4><span class="glyphicon glyphicon-user"></span>&nbsp User Tags</h4>
    <%= f.fields_for :tags do |tag| %>
      <%= collection_check_boxes :country, :tags, Tag.all, :id, :name do |b| %>
      <p>
        <%= b.check_box(class: "check_box") %>
        <%= b.object.name %>
      </p>
      <% end %>
    <% end %>

    <br><%= f.submit "Create country", class: "btn btn-control btn-primary" %>
  <% end %>
</div>
