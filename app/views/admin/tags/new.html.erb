<div class="container" id="new-tag-container">
  <h1>Create Tag</h1>

  <%= form_tag admin_tags_path, html: { class: "form-group" } do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name], type: "name", class: "form-control", placeholder: "Enter tag name" %><br>

    <%= submit_tag "Create", class: "btn btn-control btn-primary" %>
  <% end %>
</div>
