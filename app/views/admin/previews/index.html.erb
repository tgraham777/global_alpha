<div class="container" id="preview-index-container">
  <h1>Previews</h1>

  <form method="GET" action="/admin/previews/new">
    <input type="submit" value="Create new preview", class="btn btn-control btn-success">
  </form>

  <% @previews.each do |preview| %>
    <hr><h2><%= link_to preview.title, admin_preview_path(preview) %></h2>
    <h4><em><%= preview.report_date %></em></h4>
    <%= truncate(preview.intro, length: 250) %>
  <% end %>
</div>
