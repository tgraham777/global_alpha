<div class="container" id="preview-index-container">
  <h1 class="index-title"><span style="font-size: 25px;" class="glyphicon glyphicon-zoom-in"></span> Previews</h1>

  <form method="GET" action="/admin/previews/new">
    <input type="submit" value="Create new preview", class="btn btn-control btn-success">
  </form>

  <% @previews.each do |preview| %>
    <h2 class="index-item-title"><%= link_to preview.title, admin_preview_path(preview) %></h2>
    <h4><em><%= preview.report_date %></em></h4>
    <div class="tagline-index"><%= preview.tagline.html_safe %></div><hr>
  <% end %>
</div>
