<div class="container" id="new-preview-container">
  <h1>Add Preview</h1>

  <%= form_tag admin_previews_path, html: { class: "form-group" } do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, params[:title], type: "title", class: "form-control", placeholder: "Enter preview title" %><br><br>

    <%= label_tag :tags %><span><em> (select all that apply)</em></span><br>

    <%= collection_check_boxes :preview, :tags, Tag.all, :name, :name do |b| %>
      <p>
        <%= b.check_box(class: "check_box") %>
        <%= b.object.name %>
      </p>
    <% end %>

    <br><%= submit_tag "Create Preview", class: "btn btn-control btn-primary" %>
  <% end %>
</div>
