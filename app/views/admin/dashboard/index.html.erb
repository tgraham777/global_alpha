<div class="row">
  <div class="column col-xs-12">
    <div class="container" id="dashboard-container">
      <h1>Dashboard: Global Macro</h1><br>
      <img id="dashboard-image1" src="/images/dashboard-view1.jpg" alt="Image not available" /><br><br><br>
      <img id="dashboard-image1" src="/images/dashboard-view2.jpg" alt="Image not available" /><br><br><br>
      <img id="dashboard-image1" src="/images/dashboard-view3.jpg" alt="Image not available" />
    </div>
  </div>

  <div class="column col-xs-3" id="sidebar">
    <div id="country-sidebar">
      <h4><span class="glyphicon glyphicon-globe"></span>&nbsp Related Countries</h4>
      <ul>
        <% @related_countries.each do |country| %>
          <li><%= link_to country.name, admin_country_path(country) %></li>
        <% end %>
      </ul>
    </div>
    <div id="indicator-sidebar">
      <h4><span class="glyphicon glyphicon-stats"></span>&nbsp Related Indicators</h4>
      <ul>
        <% @related_indicators.each do |indicator| %>
          <li><%= link_to indicator.name, admin_indicator_path(indicator) %></li>
        <% end %>
      </ul>
    </div>
    <div id="topic-dashboard-sidebar">
      <h4><span class="glyphicon glyphicon-th-list"></span>&nbsp Related Topics</h4>
      <ul>
        <% @related_topics.each do |topic| %>
          <li><%= link_to topic.title, admin_topic_path(topic) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
