<div class="container" id="country-index-container">
  <h1><span style="font-size: 25px;" class="glyphicon glyphicon-stats"></span> Indicators</h1>

  <form method="GET" action="/admin/indicators/new">
    <input type="submit" value="Create new indicator", class="btn btn-control btn-success">
  </form>

  <% @countries.each do |country| %>
    <h3 style="text-decoration: underline; margin-bottom: 7px;"><%= country.name %></h3>
    <ul>
      <% country.indicators.sort_by(&:name).each do |indicator| %>
        <li><h5 style="margin-top: 7px; margin-bottom: 7px;"><%= link_to indicator.name, admin_indicator_path(indicator) %></h5></li>
      <% end %>
    </ul>
  <% end %>
</div>
