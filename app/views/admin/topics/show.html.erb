<div class="row">
    <div class="column col-xs-12">
      <div class="container" id="topic-container">
        <%= link_to "Back to Topics", admin_topics_path, class: "back-to-link" %>

        <h1><%= @topic.title %></h1>
        <h5><em><%= @topic.report_date %></em></h5>

        <p><%= @topic.intro %></p>
        <% @visuals.each do |visual| %>
          <br><%= visual.link.html_safe %>
          <p><span style="padding-left: 175px;"></span><em><%= visual.caption %></em></p>
          <%= simple_format(visual.description) %>
        <% end %>

        <h3>Conclusion</h3>
        <p><%= @topic.conclusion %></p><hr>

        <h4>Tags</h4>
        <ul>
          <% @topic.tags.each do |tag| %>
            <li><%= tag.name %></li>
          <% end %>
        </ul><br>

        <%= button_to "Edit topic", edit_admin_topic_path(@topic), method: :get, class: "btn btn-control btn-success" %><br>
        <%= button_to "Delete topic", admin_topic_path(@topic), method: :delete, class: "btn btn-control btn-danger" %>
      </div>
    </div>

    <!-- sidebar -->
    <div class="column col-xs-3" id="sidebar">
      Related Countries:
      <ul>
        <li><%= link_to @topic.tags.sample.countries.sample.name, admin_country_path(Country.find_by(name: @topic.tags.sample.countries.sample.name)) %></li>
      </ul>

      Related Indicators:
      <ul>
        <li><%= link_to @topic.tags.sample.indicators.sample.name, admin_indicator_path(Indicator.find_by(name: @topic.tags.sample.indicators.sample.name)) %></li>
      </ul>
    </div>
</div>
