    <% @indicator.tags.each do |tag| %>
      <li><%= tag.name.capitalize %></li>
    <% end %>
  </ul><br>

  <%= button_to "Delete Indicator", indicator_path(@indicator), method: :delete, class: "btn btn-control btn-danger" %>
